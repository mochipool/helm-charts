{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": { "type": "integer", "minimum": 1 },
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "type": "string" }
      },
      "required": ["repository", "tag"]
    },
    "service": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "type": { "type": "string" },
        "protocol": { "type": "string" }
      },
      "required": ["name", "port"]
    },
    "socket": {
      "type": "object",
      "properties": {
        "mountType": { "type": "string", "enum": ["pvc", "hostPath", "csi", "nfs"] },
        "pvcName": { "type": "string" },
        "hostPath": { "type": "string" },
        "csi": {
          "type": "object",
          "properties": {
            "driver": { "type": "string" },
            "volumeHandle": { "type": "string" }
          }
        },
        "nfs": {
          "type": "object",
          "properties": {
            "server": { "type": "string" },
            "path": { "type": "string" }
          }
        },
        "socketPath": { "type": "string" }
      },
      "required": ["mountType", "socketPath"]
    },
    "env": {
      "type": "object",
      "properties": {
        "BLOCKFROST_NETWORK": { "type": "string" }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        }
      }
    },
    "solitary": { "type": "boolean" },
    "args": {
      "type": "object",
      "properties": {
        "logLevel": { "type": "string", "enum": ["debug", "info", "warn", "error", "trace"] },
        "mode": { "type": "string", "enum": ["compact", "light", "full"] }
      },
      "required": ["logLevel", "mode"]
    },
    "secrets": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "secret": { "type": "string" },
        "rewardAddress": { "type": "string" }
      },
      "required": ["enabled"]
    },
    "affinity": {
      "type": "object",
      "properties": {
        "podAffinity": { "type": ["object", "null"] },
        "nodeAffinity": { "type": ["object", "null"] }
      }
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {
        "fsGroup": { "type": "integer" },
        "runAsNonRoot": { "type": "boolean" },
        "runAsUser": { "type": "integer" },
        "fsGroupChangePolicy": { "type": "string" }
      }
    },
    "securityContext": {
      "type": "object",
      "properties": {
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": { "type": "array", "items": { "type": "string" } }
          }
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": { "type": "string" }
          }
        },
        "allowPrivilegeEscalation": { "type": "boolean" },
        "readOnlyRootFilesystem": { "type": "boolean" },
        "runAsNonRoot": { "type": "boolean" },
        "runAsUser": { "type": "integer" }
      }
    }
  },
  "required": ["replicaCount", "image", "service", "socket", "args"]
}
